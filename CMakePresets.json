{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/windows/${presetName}",
            "installDir": "${sourceDir}/install/windows/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{CMAKE_TOOLCHAIN_FILE}"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-msvc-x64-debug",
            "displayName": "Windows MSVC x64 Debug",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            }
        },
        {
            "name": "windows-msvc-x64-release",
            "displayName": "Windows MSVC x64 Release",
            "inherits": "windows-msvc-x64-debug",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-msvc-x64-debug",
            "displayName": "Windows MSVC x64 Debug",
            "configurePreset": "windows-msvc-x64-debug"
        },
        {
            "name": "windows-msvc-x64-release",
            "displayName": "Windows MSVC x64 Release",
            "configurePreset": "windows-msvc-x64-release"
        }
    ]
}